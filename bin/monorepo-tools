#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../vendor/autoload.php')) {
    $composerDir = dirname(__DIR__).'/vendor';
} else if (file_exists(__DIR__.'/../autoload.php')) {
    $composerDir = dirname(__DIR__);
} else {
    $composerDir = dirname(__DIR__, 3);
}

require $composerDir.'/autoload.php';

use Symfony\Component\Console\Application;
use Contao\MonorepoTools\Command\SplitCommand;
use Contao\MonorepoTools\Command\MergeCommand;

$application = new Application();

$application->add(new SplitCommand(dirname($composerDir)));
$application->add(new MergeCommand(dirname($composerDir)));

$application->run();
